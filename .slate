config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000

# monitors
alias mon-tb 2560x1440
alias mon-air 1440x900

# size aliases
alias half-width        screensizeX/2;screenSizeY
alias half-height       screenSizeX;screenSizeY/2
alias quarter           screenSizeX/2;screenSizeY/2
alias full              screenSizeX;screenSizeY
alias twelfth-width       screenSizeX/12;screenSizeY

# standard move aliases
alias left-half         corner  top-left      resize:${half-width}
alias right-half        corner  top-right     resize:${half-width}
alias top-half          corner  top-left      resize:${half-height}
alias bottom-half       corner  bottom-left   resize:${half-height}
alias top-left-quad     corner  top-left      resize:${quarter}
alias top-right-quad    corner  top-right     resize:${quarter}
alias bottom-left-quad  corner  bottom-left   resize:${quarter}
alias bottom-right-quad corner  bottom-right  resize:${quarter}
alias maximize          corner  top-left      resize:${full}
alias center            move    screenSizeX/5;0 3*screenSizeX/5;screenSizeY

# Screen Enhanced Move Aliases
alias tb-chat  corner top-right resize:${twelfth-width}   ${mon-tb}

# basic bindings
bind left:cmd,alt,ctrl corner top-left resize:screenSizeX/2;screenSizeY
bind right:cmd,alt,ctrl corner top-right resize:screenSizeX/2;screenSizeY
bind up:cmd,alt,ctrl      ${top-half}
bind down:cmd,alt,ctrl    ${bottom-half}
bind c:cmd,alt,ctrl       ${center}
bind right:cmd,alt,shift  ${bottom-right-quad}
bind up:cmd,alt,shift     ${top-right-quad}
bind left:cmd,alt,shift   ${top-left-quad}
bind down:cmd,alt,shift   ${bottom-left-quad}

bind m:cmd,alt,ctrl       ${maximize}

# moving between monitors
bind left:alt,ctrl throw left resize
bind right:alt,ctrl throw right resize

# window hints (a la vimium)
bind esc:cmd hint ASDFGHJKLBNVMCERTYUIO
config windowHintsDuration 1

#bind tab:cmd switch
config switchShowTitles false
config switchStopRepeatAtEdge false
config switchSecondsBeforeRepeat 0.3
config switchSecondsBetweenRepeat 0.04
config switchIconSize 125
config switchIconPadding 10
config switchType window

# Layout
#layout air-tb 'iTunes'                 throw 0 resize | ${maximize}
#layout air-tb 'iTerm'           throw 0 resize | corner top-right resize:${half-width}
#layout air-tb 'Google Chrome':REPEAT   throw 1 resize | ${left-half}
#layout air-tb 'Adium'                  ${tb-chat}

# Layout MBP
layout mbp 'iTerm' ${maximize}
layout mbp 'Google Chrome':REPEAT ${maximize}
layout mbp 'HipChat':REPEAT ${maximize}
layout mbp 'YNAB 4' ${maximize}
layout mbp 'Spotify' ${maximize}
layout mbp 'Evernote':REPEAT ${maximize}


# Layout Thunderbolt
layout thunderbolt 'iTerm' ${maximize}
layout thunderbolt 'Google Chrome':REPEAT ${maximize}
layout thunderbolt 'HipChat':REPEAT ${maximize}
layout thunderbolt 'YNAB 4' ${maximize}
layout thunderbolt 'Spotify' ${maximize}
layout thunderbolt 'Evernote':REPEAT ${maximize}

# Layout Bindings
bind 8:cmd,alt,ctrl layout thunderbolt
